<%= form_with(model: formation) do |form| %>
  <% if formation.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(formation.errors.count, "error") %> prohibited this formation from being saved:</h2>

      <ul>
        <% formation.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="form-group">
    <%= form.label :id, "ID" %>
    <%= form.number_field :id, class: "form-control" %> <!-- Champ pour l'ID -->
  </div>
  
  <div>
    <%= form.label :title, style: "display: block" %>
    <%= form.text_field :title %>
  </div>

  <div>
    <%= form.label :description, style: "display: block" %>
    <%= form.text_area :description %>
  </div>

  <div>
    <%= form.label :link, style: "display: block" %>
    <%= form.text_field :link %>
  </div>

  <div>
    <%= form.label :picture, style: "display: block" %>
    <%= form.text_field :picture %>
  </div>

  <div>
    <%= form.label :date, style: "display: block" %>
    <%= form.date_field :date %>
  </div>

  <div>
    <%= form.label :endDate, style: "display: block" %>
    <%= form.date_field :endDate %>
  </div>

  <div>
    <%= form.label :ecole, style: "display: block" %>
    <%= form.text_field :ecole %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
